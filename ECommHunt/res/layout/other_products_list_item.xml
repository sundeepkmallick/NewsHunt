<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_other"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_item_tiles"
    android:gravity="fill_horizontal"
    android:orientation="vertical"
    android:padding="2dp" >

    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/txt_orange"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/header_sub_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/header_text"
        android:layout_alignRight="@+id/header_text"
        android:layout_below="@+id/header_text"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/counter_text_bg"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_Product"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/header_sub_text"
        android:layout_below="@+id/header_sub_text"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_empty"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_Product"
        android:layout_below="@+id/img_Product"
        android:layout_marginTop="5dp"
        android:text="Offer Price"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/counter_text_bg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dip"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="Rs 480.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/txt_blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/tv_offer_price"
        android:text="@string/original_price"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/counter_text_bg"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_offer_price"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/textView5"
        android:text="Rs 480.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/txt_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/tv_original_price"
        android:layout_margin="@dimen/dp_2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/buttonBuyNow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/txt_stock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/custom_red_button"
        android:text="@string/add_to_bag"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />

</RelativeLayout>